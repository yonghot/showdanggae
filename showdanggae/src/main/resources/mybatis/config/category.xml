<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">
	
	<select id="getMemberProduct_idList" resultType="String">
		select
		product_id
		from product
		where category_id=#{value}
	</select>
	
	<select id="deleteProductList">
	<![CDATA[
	 delete 
	 from product
	 where category_id=#{value}
	 ]]>
	</select>
	
	<delete id="deleteSellerLinkList">
		<![CDATA[
			delete 
			from seller_link 
			where product_id=#{value}
	 	]]>
	</delete>
	
	<delete id="deleteEvaluatingItemList">
		<![CDATA[
			delete 
			from eval_item 
			where product_id=#{value}
	 	]]>
	</delete>
	
	<select id="deleteCatgory">
	 	<![CDATA[
	 		delete 
	 		from member_category 
	 		where category_id=#{value}
	 	]]>
	</select>
	
	<select id="getMemberCategoryList" resultType="cvo">
		<![CDATA[
		select 
		category_id, category, member_id
		from member_category
		where member_id=#{value}
		]]>
	</select>

	<select id="getMainCategoryList" resultType="cvo">
		select category
		from main_category
	</select>

	<select id="addMyCategory">
	 	<![CDATA[
	 		insert into member_category(category_id, category, member_id) 
	 		values(member_category_seq.nextval, #{category}, #{id})
	 	]]>
	</select>
	
	<select id="addInterest">
	 	<![CDATA[
	 		insert into interest(category, member_id)
	 		values (#{category}, #{member_id})
	 	]]>
	</select>
	
	<select id="getProductCountNumber" resultType="int">
		<![CDATA[
			select count(*) 
			from member_category
			where category_id=#{value}
		]]>
	</select> 
	
</mapper> 	
	
 
 
 
 
 
 
 
 
 
 
 
 
 
 

















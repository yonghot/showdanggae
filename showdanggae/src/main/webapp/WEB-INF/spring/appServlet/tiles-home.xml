<?xml version="1.0" encoding="UTF-8" ?>
<!-- 타일즈 설정파일 -->
 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<!-- 컨트롤러에서 view name을 아래 definition name 으로 반환하면 TilesViewResolver에 의해 include된 
	여러 페이지 조합결과 화면이 반환된다. -->
<tiles-definitions>

	<definition name="home"  template="/WEB-INF/views/templates/layout.jsp">
		<put-attribute name="header"  value="/WEB-INF/views/templates/header.jsp"></put-attribute>
		<put-attribute name="left"  value="/WEB-INF/views/templates/left.jsp"></put-attribute>
		<put-attribute name="main"  value="/WEB-INF/views/templates/main.jsp"></put-attribute>
		<put-attribute name="right"  value="/WEB-INF/views/templates/right.jsp"></put-attribute>
		<put-attribute name="footer"  value="/WEB-INF/views/templates/footer.jsp"></put-attribute>
	</definition>

</tiles-definitions>







